<Screen1>: #Name of the screeen; works in hierarchial
    GridLayout:
        cols: 1 #column, must be specified
        GridLayout:
            cols: 1
            size_hint: 0.3, 0.3
            padding: 15, 15 #outside of the GridLayout
            spacing: 20, 20 #between widget inside the GridLayout
            Label:
                text: "Offline English Dictionary"
                font_size: "20sp" # sp = space-independent pixels
                text_size: self.width, None
                height: self.texture_size[1]

            TextInput:
                id: word_to_look
                hint_text: "Enter a word"
        GridLayout:
            cols: 2
            size_hint: 0.2, 0.2 #it gives 20% space in the screen
            padding: 10, 10
            spacing: 10, 0
            Button:
                text: "Search"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.search_definition(root.ids.word_to_look.text)
            Button:
                text: "Clear"
                background_color: 1,1,1,0
                opacity: 1 if self.state == "normal" else 0.5
                color: 0.1, 0.7, 1, 1
                on_press: root.clear(root.ids.word_to_look.text)

        GridLayout:
            cols: 1
            padding: 15, 15 #outside of the GridLayout
            spacing: 20, 20
            ScrollView:
                Label:
                    id: definition_list
                    text: ""
                    text_size: self.width, None
                    size_hint_y: None
                    height: self.texture_size[1]

##


<RootWidget>: # <inside of this is called rule>
    Screen1:
        name: "screen_1"
